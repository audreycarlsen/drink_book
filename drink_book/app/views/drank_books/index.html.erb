<h1>Drinkbooks</h1>

<table>

  <tbody>
    <% @drank_books.each do |drank_book| %>
      <tr>
        <td class='row_title'><%= link_to drank_book.name, drank_book %></td>
        <td>[<%= link_to 'Edit', edit_drank_book_path(drank_book) %>]  [<%= link_to 'Delete', drank_book, method: :delete, data: { confirm: 'Are you sure?' } %>]</td>
      </tr>
      <tr>
        <td><%= drank_book.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

